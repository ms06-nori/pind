
<div id="pin_show" class="row">
  <div class="col-md-6 col-md-offset-3 panel panel-default panel-heading.pin_image">
<%= image_tag @pin.image.url(:medium) %>
<div class="panel-body">
<h1><%= @pin.title %></h1>
<p><%= @pin.description %></p>
<p>Submitted by 
<%= @pin.user.email %></p>
</div>
<div class="panel-footer row col-md-6">
<p class="user">Submitted by <%= @pin.user.email %></p>
<div class="col-md-6 btn-group pull-right">
<%= link_to 'Like', like_pin_path(@pin), method: :put %>
<span class="glyphicon glyphicon-heart"> </span>
<%= @pin.get_upvotes.size%>
<%= link_to 'Back', root_path %>
<%= link_to 'Edit', edit_pin_path %>
<%= link_to 'Delete', pin_path, method: :delete, data: { confirm: "Are you sure?"} %>
</div>
</div>
</div>
</div>